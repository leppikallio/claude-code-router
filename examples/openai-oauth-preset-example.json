{
  "name": "openai-oauth-codex",
  "version": "1.0.0",
  "description": "OpenAI OAuth (ChatGPT subscription) preset using the Codex OAuth flow",
  "author": "Your Name",
  "keywords": ["openai", "oauth", "codex"],
  "schema": [
    {
      "id": "model",
      "type": "select",
      "label": "Codex model",
      "prompt": "Select a Codex model",
      "options": {
        "type": "static",
        "options": [
          {
            "label": "GPT-5.1 Codex Max",
            "value": "gpt-5.1-codex-max"
          },
          {
            "label": "GPT-5.1 Codex Mini",
            "value": "gpt-5.1-codex-mini"
          },
          {
            "label": "GPT-5.2",
            "value": "gpt-5.2"
          },
          {
            "label": "GPT-5.2 Codex",
            "value": "gpt-5.2-codex"
          }
        ]
      },
      "required": true,
      "defaultValue": "gpt-5.1-codex-max"
    }
  ],
  "template": {
    "Providers": [
      {
        "name": "openai",
        "api_base_url": "https://api.openai.com/v1/chat/completions",
        "api_key": "opencode-oauth-dummy-key",
        "models": ["{{model}}"],
        "transformer": {
          "use": ["openai-codex-oauth"]
        }
      }
    ],
    "Router": {
      "default": "openai/{{model}}"
    }
  }
}
